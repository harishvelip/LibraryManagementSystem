  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body col-md-6 col-offset-6">
  <h3 style="color : white">Edit Book</h3>
  <form action="/libraries/{{library.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="book_title" style="color : white">Book Title</label>
      <input type="text" class="form-control" name="book_title" value="{{library.book_title}}" required>
    </div>
    <div class="form-group">
      <label for="publication_year " style="color : white">Publication Year</label>
      <input type="text" class="form-control" name="publication_year" value="{{library.publication_year}}" required>
    </div>
    <div class="form-group">
      <label for="language" style="color : white">Languages</label>
      <input type="text" class="form-control" name="language" value="{{library.language}}" required>
    </div>
    <div class="form-group">
      <label for="no_of_copies" style="color : white">No of Copies</label>
      <input type="text" class="form-control" name="no_of_copies" value="{{library.no_of_copies}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>